{% extends "base.jinja2" %}
{% block title %}{{ title2 }}{% endblock %}
{% block content %}
    <h1>Welcome {{ user_details.name }}</h1>
    {% if squad_details %}
        <h3>My squad - {{ user_details.squad_name }}</h3>
        <h4>Starting 11</h4>
        {# Starters #}
        <table>
            <tr>
                <th>Information</th>
                <th>Name</th>
                <th>Position</th>
                <th>Club</th>
                <th>total points</th>
                <th>cost</th>
            </tr>
            {% for player in squad_details %}
                {% if player[1].starter %}
                    <tr>
                        <td>
                            {% if player[1].captain %}
                                C
                            {% elif player[1].vice_captain %}
                                V
                            {% endif %}

                        </td>
                        <td>
                            {{ player[0].name}}
                        </td>
                        <td>
                            {{ player[0].position }}
                        </td>
                        <td>
                            {{ player[0].club }}
                        </td>
                        <td>
                            {{ player[0].total_points }}
                        </td>
                        <td>
                            {{ player[0].cost }}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
        {# Substitutes table #}
        <table>
            <tr>
                <th>Information</th>
                <th>Name</th>
                <th>Position</th>
                <th>Club</th>
                <th>total points</th>
                <th>cost</th>
            </tr>
            <h4>The bench </h4>
                {% for player in squad_details %}
                    {% if not player[1].starter %}
                        <tr>
                            <td>
                                {% if player[1].captain %}
                                    C
                                {% elif player[0].vice_captain %}
                                    V
                                    {% endif %}
                            </td>
                            <td>
                                {{ player[0].name}}
                            </td>
                            <td>
                                {{ player[0].position }}
                            </td>
                            <td>
                                {{ player[0].club }}
                            </td>
                            <td>
                                {{ player[0].total_points }}
                            </td>
                            <td>
                                {{ player[0].cost }}
                            </td>
                        </tr>
                    {% endif %}
            {% endfor %}
        </table>
    {% else %}
        <div>
            <p>No squads detected, please create a new squad</p>
        </div>
    {% endif %}



{% endblock %}